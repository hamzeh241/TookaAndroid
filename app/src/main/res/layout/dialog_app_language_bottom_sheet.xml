<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <ir.tdaapp.tooka.components.TookaCustomTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin16"
    app:customTextViewTitleText="@string/persian"
    app:customTextViewIconVisible="true"
    app:customTextViewSubtitleVisible="false"
    android:id="@+id/ctvPersian"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true" />

  <ir.tdaapp.tooka.components.TookaCustomTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:customTextViewTitleText="@string/english"
    app:customTextViewIconVisible="true"
    app:customTextViewSubtitleVisible="false"
    android:id="@+id/ctvEnglish"
    android:layout_marginBottom="@dimen/margin16"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true" />


</LinearLayout>