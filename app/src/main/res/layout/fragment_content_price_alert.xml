<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <androidx.cardview.widget.CardView
    android:layout_width="0dp"
    android:layout_height="@dimen/size48"
    app:layout_constraintTop_toBottomOf="@+id/textInputCapital"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:cardElevation="@dimen/elev0"
    app:cardBackgroundColor="?colorPrimary"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:id="@+id/cardView">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center">

      <TextView
        android:text="@string/add_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin24"
        android:layout_marginEnd="@dimen/margin24"
        android:textAppearance="@style/TextAppearance.MyTheme.Headline6"
        android:textColor="@color/white" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/cardView"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toBottomOf="@+id/textView7"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

      <TextView
        android:text="۳"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txt3"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.MyTheme.ToolbarTitle"
        android:gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless" />

      <TextView
        android:text="۲"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txt2"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.MyTheme.ToolbarTitle"
        android:gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless" />

      <TextView
        android:text="۱"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txt1"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.MyTheme.ToolbarTitle"
        android:gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless" />
    </LinearLayout>

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

      <TextView
        android:text="۶"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txt6"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.MyTheme.ToolbarTitle"
        android:gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless" />

      <TextView
        android:text="۵"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txt5"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.MyTheme.ToolbarTitle"
        android:gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless" />

      <TextView
        android:text="۴"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txt4"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.MyTheme.ToolbarTitle"
        android:gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless" />
    </LinearLayout>

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

      <TextView
        android:text="۹"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txt9"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.MyTheme.ToolbarTitle"
        android:gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless" />

      <TextView
        android:text="۸"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txt8"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.MyTheme.ToolbarTitle"
        android:gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless" />

      <TextView
        android:text="۷"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txt7"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.MyTheme.ToolbarTitle"
        android:gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless" />
    </LinearLayout>

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

      <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/imgDelete"
        android:layout_weight="1"
        android:src="@drawable/ic_delete" />

      <TextView
        android:text="۰"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txt0"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.MyTheme.ToolbarTitle"
        android:gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless" />

      <TextView
        android:text="."
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txtPoint"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.MyTheme.ToolbarTitle"
        android:gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless" />
    </LinearLayout>
  </LinearLayout>

  <ir.tdaapp.tooka.components.TookaToggleButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:id="@+id/toggle"
    app:cardElevation="@dimen/elev0" />

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/toggle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="32dp"
    android:layout_marginStart="@dimen/margin16"
    android:layout_marginEnd="@dimen/margin16"
    android:gravity="center"
    android:id="@+id/linearLayout">

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/ic_add"
      android:id="@+id/imgIncrease"
      tools:ignore="SpeakableTextPresentCheck"
      app:tint="@color/green_100" />

    <TextView
      android:text="TextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/txtPrice"
      android:layout_weight="1"
      android:gravity="center"
      android:fontFamily="@font/iran_yekan_reqular_mobile_fa_num"
      android:textColor="@color/black"
      android:textStyle="bold"
      android:textSize="18sp" />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/ic_baseline_remove_circle_24"
      android:id="@+id/imageButton4"
      tools:ignore="TouchTargetSizeCheck"
      app:tint="@color/red_200" />
  </LinearLayout>

  <TextView
    android:text="@string/toomans"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:fontFamily="@font/iran_yekan_reqular_mobile_fa_num"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textSize="18sp"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"
    android:id="@+id/textView7" />
</androidx.constraintlayout.widget.ConstraintLayout>