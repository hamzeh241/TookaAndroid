<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="128dp"
  android:layout_height="152dp">

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="64dp"
      tools:srcCompat="@tools:sample/avatars"
      android:id="@+id/imageView3" />


    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="88dp"
      android:layout_gravity="bottom">

      <TextView
        android:text="اول مانی"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginTop="@dimen/margin16"
        android:textSize="8sp"
        android:gravity="center"
        android:fontFamily="@font/regular" />

      <TextView
        android:text="۲۰ درصد اصلاح شیبا اینو به دنبال واکنش ایلان ماسک"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView12"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/medium"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin8" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/size32"
      android:layout_height="@dimen/size32"
      android:id="@+id/tookaCircleImage2"
      android:src="@drawable/ic_btc"
      app:civ_border_color="@color/white"
      app:civ_border_width="1dp"
      app:layout_anchorGravity="bottom|center"
      app:layout_anchor="@+id/imageView3" />

  </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.cardview.widget.CardView>