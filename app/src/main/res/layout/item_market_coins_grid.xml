<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cardTopCoin"
  android:layout_width="match_parent"
  android:layout_height="142dp"
  app:cardCornerRadius="@dimen/margin0"
  app:cardElevation="@dimen/elev0">

  <LinearLayout
    android:id="@+id/topCoinRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:weightSum="10">

      <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgCoin"
        android:layout_width="@dimen/size32"
        android:layout_height="@dimen/size32"
        imageUrl="@{coin.icon}"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin8" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/txtCoinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin8"
        android:textAppearance="@style/TextAppearance.MyTheme.Headline6"
        android:layout_weight="1" />

      <ImageView
        android:id="@+id/imgAscend"
        android:layout_width="@dimen/size16"
        android:layout_height="@dimen/size16" />

      <TextView
        android:id="@+id/txtCoinPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin8"
        android:fontFamily="@font/iran_yekan_reqular_mobile_fa_num"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="end" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
          android:id="@+id/txtPriceUSD"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/margin8"
          android:layout_marginEnd="@dimen/margin8"
          android:layout_weight="1"
          android:gravity="center"
          android:textAppearance="@style/TextAppearance.MyTheme.Price2" />

        <TextView
          android:id="@+id/textView5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin8"
          android:fontFamily="@font/iran_yekan_reqular_mobile_fa_num"
          android:gravity="center"
          android:text="دلار"
          android:textColor="@android:color/darker_gray"
          android:textSize="12sp" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
          android:id="@+id/txtPriceTMN"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_marginEnd="@dimen/margin8"
          android:layout_weight="1"
          android:gravity="center"
          android:textAppearance="@style/TextAppearance.MyTheme.Price1" />

        <TextView
          android:id="@+id/textView4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin8"
          android:fontFamily="@font/iran_yekan_reqular_mobile_fa_num"
          android:gravity="center"
          android:text="تومان"
          android:textColor="@color/dark_blue_900"
          android:textSize="12sp" />
      </LinearLayout>

    </LinearLayout>
  </LinearLayout>


</androidx.cardview.widget.CardView>