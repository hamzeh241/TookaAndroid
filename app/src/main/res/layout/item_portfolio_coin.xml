<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/margin4">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/size12"
      android:layout_height="@dimen/size12"
      android:layout_marginTop="@dimen/margin16"
      android:layout_marginStart="@dimen/margin16"
      android:src="@color/green_500"
      android:layout_marginBottom="@dimen/margin16"
      android:id="@+id/imgPortfolioCoinColor" />

    <TextView
      android:text="TextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/txtCoinName"
      android:layout_marginTop="@dimen/margin16"
      android:layout_marginStart="@dimen/margin8"
      android:textAppearance="@style/TextAppearance.MyTheme.Headline6"
      android:layout_marginBottom="@dimen/margin16" />

    <TextView
      android:text="TextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/txtCapitalPercentage"
      android:layout_marginTop="@dimen/margin16"
      android:layout_marginStart="@dimen/margin8"
      android:textAppearance="@style/TextAppearance.MyTheme.Price2"
      android:layout_marginBottom="@dimen/margin16" />

    <View
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"/>

    <TextView
      android:text="1.98 ETH"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/txtCoinAmount"
      android:layout_marginEnd="@dimen/margin16"
      android:layout_marginTop="@dimen/margin16"
      android:textAppearance="@style/TextAppearance.MyTheme.Price1"
      android:layout_marginBottom="@dimen/margin16"
      android:gravity="end" />

  </LinearLayout>

</androidx.cardview.widget.CardView>