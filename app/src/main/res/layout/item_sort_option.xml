<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  app:cardCornerRadius="@dimen/radius16"
  app:cardElevation="@dimen/elev0"
  app:cardBackgroundColor="@color/white_100"
  android:checkable="true"
  android:focusable="true"
  android:background="?selectableItemBackground">

  <TextView
    android:text="TextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin8"
    android:layout_marginEnd="@dimen/margin8"
    android:layout_marginTop="@dimen/margin4"
    android:layout_marginBottom="@dimen/margin4"
    android:id="@+id/txtSortOptionsTitle"
    android:textAppearance="@style/TextAppearance.MyTheme.NewsTitle"
    app:drawableEndCompat="@drawable/ic_arrow_descend" />

</com.google.android.material.card.MaterialCardView>
