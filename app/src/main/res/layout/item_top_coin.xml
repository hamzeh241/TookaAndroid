<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cardTopCoin"
  android:layout_width="160dp"
  android:layout_height="142dp">

  <LinearLayout
    android:id="@+id/topCoinRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:weightSum="10"
      android:gravity="center_vertical">

      <ImageView
        android:id="@+id/imgCoin"
        android:layout_width="@dimen/size32"
        android:layout_height="@dimen/size32"
        android:layout_marginStart="@dimen/margin8"
        android:src="@drawable/ic_btc"
        android:scaleType="centerCrop" />

      <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin8" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/txtCoinName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin8"
        android:layout_weight="1"
        android:text="بیت کوین"
        android:textAppearance="@style/TextAppearance.MyTheme.Headline6" />

      <ImageView
        android:id="@+id/imgAscend"
        android:layout_width="@dimen/size16"
        android:layout_height="@dimen/size16"
        app:srcCompat="@drawable/ic_baseline_arrow_upward_24" />

      <TextView
        android:id="@+id/txtCoinPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin8"
        android:fontFamily="@font/iran_yekan_reqular_mobile_fa_num"
        android:text="2.31 %"
        android:textSize="12sp"
        android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
          android:id="@+id/txtPriceUSD"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/margin8"
          android:layout_marginEnd="@dimen/margin8"
          android:layout_weight="1"
          android:gravity="center"
          android:text="44,354"
          android:textAppearance="@style/TextAppearance.MyTheme.Price2" />

        <TextView
          android:id="@+id/textView5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin8"
          android:fontFamily="@font/iran_yekan_reqular_mobile_fa_num"
          android:gravity="center"
          android:text="دلار"
          android:textColor="@android:color/darker_gray"
          android:textSize="12sp" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
          android:id="@+id/txtPriceTMN"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_marginEnd="@dimen/margin8"
          android:layout_weight="1"
          android:gravity="center"
          android:text="1,354,648,354"
          android:textAppearance="@style/TextAppearance.MyTheme.Price1" />

        <TextView
          android:id="@+id/textView4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin8"
          android:fontFamily="@font/iran_yekan_reqular_mobile_fa_num"
          android:gravity="center"
          android:text="تومان"
          android:textColor="@color/dark_blue_900"
          android:textSize="12sp"
          android:layout_marginEnd="@dimen/margin8" />
      </LinearLayout>

    </LinearLayout>
  </LinearLayout>


</androidx.cardview.widget.CardView>